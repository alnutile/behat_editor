function _behat_editor_tokenizer_set_output_to_model($token_content) {
    $token_content_tweak = array();
    foreach($token_content as $key => $value) {
        $broken_down = explode(':', $value);
        $token_content_tweak[$broken_down[0]] = array(trim($broken_down[1]));
    }
    return $token_content_tweak;
}

function _behat_editor_tokenizer_set_output_from_model($token_content) {
    $token_content_tweak = null;
    foreach($token_content as $key => $value) {
        if(strpos($value, '#') !== FALSE) {
            $token_content_tweak .= "$value\n";
        } else {
            $step2 = explode(":", $value);
            $token_content_tweak .= "$step2[0]: $step2[1]\n";
        }
    }
    return $token_content_tweak;
}




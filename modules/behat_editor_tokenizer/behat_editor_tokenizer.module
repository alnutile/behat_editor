function behat_editor_tokenizer_get($filename, $parameters) {
    global $user;
    composer_manager_register_autoloader();
    $filename = $parameters['filename'];
    $token_content = $parameters['token_content'];
    $filepath = $parameters['fullpath'];
    $filesystem = new Filesystem();
    $yaml_parser = new Yaml();
    $model = new TokenizerModel($filename, $filepath, $token_content, $filesystem, $yaml_parser);
    $results = $model->retrieve();
    drupal_alter('behat_editor_takenizer_post_retrieve', $results);
    $results['content'] = _behat_editor_tokenizer_set_output_from_model($results['content']);
    return $results;
}

